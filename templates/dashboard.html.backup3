        // Select emoji
        function selectEmoji(element, emoji) {
            const dropdown = element.closest('.emoji-picker-dropdown');
            const button = dropdown.previousElementSibling;
            const inputGroup = button.closest('.input-group');
            const hiddenInput = inputGroup.querySelector('input[type="hidden"]');
            
            // Update button display and hidden input
            button.textContent = emoji;
            button.setAttribute('data-emoji', emoji);
            if (hiddenInput) {
                hiddenInput.value = emoji;
