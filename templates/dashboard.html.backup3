        function filterEmojis(input) {
            const searchTerm = input.value.toLowerCase();
            const grid = input.nextElementSibling;
            const emojis = grid.querySelectorAll('.emoji-option');
            
            emojis.forEach(emoji => {
                const emojiChar = emoji.textContent;
                const shouldShow = searchTerm === '' || emojiCategories['Faces & People'].includes(emojiChar) ||
                                 allEmojis.includes(emojiChar);
                emoji.style.display = shouldShow ? 'flex' : 'none';
            });
        }

